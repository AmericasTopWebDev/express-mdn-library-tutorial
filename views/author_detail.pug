extends layout

block content

  h1 Author: #{author.name}
  p 
    if author.lifespan && !author.lifespan.includes('Invalid')
      | (#{author.lifespan})
    else if author.date_of_birth 
      | (#{author.date_of_birth_formatted}) - (unknown)
    else if author.date_of_death 
      | (unknown) - (#{author.date_of_death_formatted})
    else if author.lifespan
      | (unknown)

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
  hr
  p
    a(href=author.url+'/delete') Delete author
